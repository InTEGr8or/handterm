{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "sourceRoot": "src",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "sourceMap": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [
      "node"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "outDir": "./dist",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "src/*": [
        "src/*"
      ],
      "@xterm/xterm": [
        "node_modules/@xterm/xterm"
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ],
  "include": [
    "./src/**/*",
    "./src/types/**/*.d.ts",
    "./src/types/**/*.ts",
    "vitest-setup.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
