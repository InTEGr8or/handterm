{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["node"],
    "composite": true
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "src/types/**/*.d.ts",
    "src/hooks/**/*.d.ts",
    "src/test-utils/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "moduleResolver.js",
    "@monaco-editor-react.js",
    "scripts/**/*.js"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    "dist",
    "coverage",
    "e2e",
    "tests",
    "tests-examples",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "playwright.config.ts",
    "vitest.config.ts",
    "vite.config.ts"
  ]
}
