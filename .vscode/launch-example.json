{                                                                      
   "version": "0.2.0",                                                  
   "configurations": [                                                  
     {                                                                  
       "type": "chrome",                                                
       "request": "launch",                                             
       "name": "Launch Chrome in Incognito Mode",                       
       "url": "http://localhost:5173", // Default Vite dev server port  
       "webRoot": "${workspaceFolder}",                                 
       "runtimeArgs": [                                                 
         "--incognito",                                                 
         "--new-window"                                                 
       ],                                                               
       "sourceMaps": true,                                              
       "sourceMapPathOverrides": {                                      
         "webpack:///./src/*": "${webRoot}/src/*"                       
       }                                                                
     }                                                                  
   ]                                                                    
 }          