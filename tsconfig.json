{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node", "@testing-library/jest-dom"],
    "paths": {
      "'*'": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@game/*": [
        "./src/game/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@contexts/*": [
        "./src/contexts/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@providers/*": [
        "./src/providers/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@e2e/*": [
        "./src/e2e/*"
      ],
      "@test-utils/*": [
        "./src/test-utils/*"
      ],
      "@commands/*": [
        "./src/commands/*"
      ],
      "@signals/*": [
        "./src/signals/*"
      ],
      "@types/*": [
        "./src/types/*"
      ],
      "monaco-editor": [
        "./node_modules/monaco-editor/esm/vs/editor/editor.api.js"
      ],
      "@handterm/types": [
        "./packages/types/dist/packages/types/src"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "rendererOptions": {
            "sass": {
              "includePaths": [
                "./src/styles"
              ]
            }
          }
        }
      },
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": [
          "**/node_modules/**",
          "**/dist/**"
        ]
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "test/**/*.ts",
    "moduleResolver.ts",
    ".eslintrc.cjs",
    "node_modules/@types/testing-library__jest-dom/index.d.ts",
    "node_modules/@playwright/test/index.d.ts"
  ],
  "exclude": [
    "scripts",
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}