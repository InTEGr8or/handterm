{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    ".eslintrc.cjs",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/.*.cjs",
    "**/.*.js",
    "packages/eslint-plugin-custom-rules/**"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/coverage",
    "**/backups"
  ]
}
