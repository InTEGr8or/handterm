{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": [
      "node",
      "vitest",
      "vitest/globals",
      "@testing-library/jest-dom",
      "@playwright/test"
    ],
    "composite": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/__tests__/**/*",
    "src/test-utils/**/*",
    "e2e/**/*",
    "tests/**/*",
    "vitest-setup.ts",
    "setupTests.ts",
    "playwright.config.ts",
    "vitest.config.ts",
    "src/**/*.d.ts",
    "src/hooks/**/*.d.ts",
    "src/test-utils/**/*.d.ts",
    "tests-examples/**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.json"
    }
  ]
}
